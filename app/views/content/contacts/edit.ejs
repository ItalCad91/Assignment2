<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Add new contact</h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Company Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter company's name"
                    name="name" 
                    value="<%= contact.companyName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Name</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter Name"
                    name="year" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter person's email"
                    name="director" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Phone Number</label>
                    <input type="number" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter email"
                    name="genre"                     
                    value="<%= contact.phoneNumber %>"
                    required
                    >
                    </input>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Message</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Leave a quick message"
                    name="genre"                     
                    value="<%= contact.message %>"
                    required
                    >
                    </input>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contacts-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>