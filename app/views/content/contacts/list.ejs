<div class="container">
    <h1>Contact List</h1>
    <% if(displayName) { %>
    <a href="/contacts-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a new contact</a>
    <% } %>
    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">companyName</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Message</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="movieList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].companyName %></td>
                            <td><%= contacts[count].name %></td>
                            <td><%= contacts[count].email %></td>
                            <td><%= contacts[count].phoneNumber %></td>
                             <td><%= contacts[count].message %></td>
                            <% if(displayName) { %>
                            
                            <td class="text-center col-1">
                                <a href="/contacts-edit/<%= contacts[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/contacts-delete/<%= contacts[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                            <% } %> 
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>